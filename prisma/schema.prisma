generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CarrierName {
  Dsv
  ScanGlobalLogistics
  VanDijken
  ThomasBoers
  Roemaat
  Raben
  Rabelink
  Palletways
  NTGRoad
  MooijTransport
  Mandersloot
  Drost
}

model Carrier {
  id        Int         @id @default(autoincrement())
  name      CarrierName @unique
  shipments Shipment[]
}

model Country {
  id            Int        @id @default(autoincrement())
  code          String     @unique
  shipmentsFrom Shipment[] @relation("FromCountry")
  shipmentsTo   Shipment[] @relation("ToCountry")
  Shipment      Shipment[]
}

model Shipment {
  id            Int    @id @default(autoincrement())
  fromCountryId Int
  toCountryId   Int
  zipcode       String
  flow          String
  ldmRates      Json
  carrierId     Int

  fromCountry Country  @relation("FromCountry", fields: [fromCountryId], references: [id])
  toCountry   Country  @relation("ToCountry", fields: [toCountryId], references: [id])
  carrier     Carrier  @relation(fields: [carrierId], references: [id])
  Country     Country? @relation(fields: [countryId], references: [id])
  countryId   Int?
}
